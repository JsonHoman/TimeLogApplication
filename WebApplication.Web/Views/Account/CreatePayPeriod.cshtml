@model PayrollTable

@{
    ViewData["Title"] = "CreatePayPeriod";
}

<h2>CreatePayPeriod</h2>

<form asp-controller="account" asp-action="CreatePayPeriod" method="post">
    <div class="form-group">
        <label asp-for="StartDate"></label>
        <input type="date" asp-for="StartDate" />
        <span asp-validation-for="StartDate"></span>
    </div>
    <div class="form-group">
        <label asp-for="EndDate"></label>
        <input type="date" asp-for="EndDate" />
        <span asp-validation-for="EndDate"></span>
    </div>
    <input type="submit" value="Create New Pay Period" class="btn btn-default" />

</form>