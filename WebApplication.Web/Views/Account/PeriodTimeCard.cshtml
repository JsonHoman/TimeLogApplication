
@{
    ViewData["Title"] = "PeriodTimeCard";
}

<h2>PeriodTimeCard</h2>

<table class="table">
    <thead>
        <tr>
            <th>
                Date
            </th>
            <th>
                Location
            </th>
            <th>
                Description
            </th>
            <th>
                Hours
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (Hours hours in ViewBag.TimeCard)
        {
            <tr>
                <td>
                    @(hours.DateWorked.ToShortDateString())
                </td>
                <td>
                    @hours.Location
                </td>
                <td>
                    @hours.Description
                </td>
                <td>
                    @hours.TimeInHours
                </td>
            </tr>
        }
    </tbody>
</table>

<p>
    <a asp-action="ApproveTimeCard" asp-route-payrollLine="@ViewBag.PayrollLine" class="btn btn-default">Approve</a>
</p>