@model User

@{
    ViewData["Title"] = "AdminIndex";
    var Users = ViewBag.Users;
}

<h2>Admin Index</h2>
@if (ViewBag.IsSuccessful == "true")
{
    <h5>Success</h5>
}
@if (ViewBag.IsSuccessful == "false")
{
    <h5>Failed</h5>
}

<p>Welcome @Model.Name</p>

<p>
    <a asp-action="Register">Create New User</a>
</p>
<p>
    <a asp-action="CreateJob">Create New Job</a>
</p>
<p>
    <a asp-action="CreateProjectTasks">Create New Project Task</a>
</p>
<p>
    <a asp-action="AddJobLocation">Add Job Location</a>
</p>
<p>
    <a asp-action="AuthorizeUser">Authorize User To Job</a>
</p>
<p>
    <a asp-action="ApproveHoursHub">Approval Hub</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                User Id
            </th>
            <th>
                Full Name
            </th>
            <th>
                Username
            </th>
            <th>
                Logged Time
            </th>
            <th>
                Authorization Level
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (User item in Users)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.UserId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Username)
                </td>
                <td>
                    @if (item.Role == "Users")
                    {
                        <a asp-action="GetUserTimeLog" asp-route-username="@item.Username">@item.Name's Time Log</a>
                    }
                    @if (item.Role == "Admin")
                    {
                        <div>n/a</div>
                    }
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Role)
                </td>
                <td>
                    @Html.ActionLink("Delete", "Delete", new { id = item.UserId })
                </td>
            </tr>
        }
    </tbody>
</table>
