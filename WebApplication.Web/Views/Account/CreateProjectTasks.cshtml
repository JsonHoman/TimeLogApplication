@model Tasks

@{
    ViewData["Title"] = "Create Tasks";
    
}


<form style="display:table" asp-action="CreateProjectTasks" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div style="display:table-row" class="form-group">
        <label style="display:table-cell">Select Job: </label>
        <select class="btn btn-default" style="display:table-cell" asp-for="JobId">
            @foreach (Job job in ViewBag.Jobs)
            {
                <option value="@job.JobId">@job.Title</option>
            }
        </select>
    </div>
    <br />
    <div style="display:table-row" class="form-group">
        <label style="display:table-cell">Input Task Title: </label>
        <input class="btn btn-default" style="display:table-cell; width:100%;" type="text" asp-for="Title" />
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>
    <br />
        <input type="submit" value="Create Task" class="btn btn-default" />
</form>

