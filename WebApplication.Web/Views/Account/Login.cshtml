@using WebApplication.Web.Models.Account;
@model LoginViewModel
@{
    ViewData["Title"] = "Login";
}

<style>
    .parent {
        display: table;
        width: 100%;
    }

    .form_login {
        display: table-cell;
        text-align: center;
        vertical-align: middle;
    }

    input[type=text], input[type=password], select {
        width: 20%;
        height: 40px;
        padding: 12px 20px;
        margin: 4px 0;
        display: inline-block;
        border: 1px solid #ccc;
        border-radius: 4px;
        box-sizing: border-box;
    }
    label {
        font-size: large;
    }
</style>

<div class="parent">
    <form class="form_login" asp-controller="account" asp-action="login" method="post">

        <div>
            <label asp-for="UserName"></label>
        </div>
        <input class="btn btn-default" asp-for="UserName" />
        <span asp-validation-for="UserName"></span>

        <br />
        <div>
            <label asp-for="Password"></label>
        </div>
        <input class="btn btn-default" type="password" asp-for="Password" />
        <span asp-validation-for="Password"></span>

        <br />
        <br />
        <input class="form_login btn btn-success btn-lg" type="submit" value="Login" />
    </form>
</div>
<br />
