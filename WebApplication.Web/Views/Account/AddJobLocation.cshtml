@model Location

@{
    ViewData["Title"] = "AddJobLocation";
}

<h2>Add Job Location</h2>

<form asp-action="AddJobLocation" method="post">
    <div>
        <label>New Location Title: </label>
        <input type="text" asp-for="Title" />
    </div>
    <div>
        <label>Location Description: </label>
        <input type="text" asp-for="Description" />
    </div>
    <div>
        <input type="submit" value="Add Location" />
    </div>
</form>

<ul>
    @foreach (Location location in ViewBag.Locations)
    {

        <li>@location.Title - @location.Description</li>

    }
</ul>