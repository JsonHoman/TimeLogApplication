@model Location

@{
    ViewData["Title"] = "AddJobLocation";
}

<h2>Add Job Location</h2>

<form style="display:table" asp-action="AddJobLocation" method="post">
    <div style="display:table-row" class="form-group">
        <label style="display:table-cell">New Location Title: </label>
        <input style="display:table-cell" type="text" asp-for="Title" />
    </div>
    <br />
    <div style="display:table-row" class="form-group">
        <label style="display:table-cell">Location Description: </label>
        <input style="display:table-cell" type="text" asp-for="Description" />
    </div>
    <br />
        <input type="submit" value="Add Location" class="btn btn-default" />
</form>

<br />

<ul>
    @foreach (Location location in ViewBag.Locations)
    {

        <li>@location.Title - @location.Description</li>

    }
</ul>